<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#536DFE</item>
    </style>

    <style name="headings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:paddingBottom">@dimen/small_padding_bottom</item>
    </style>

    <style name="standard_edit_text_wide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/small_padding_left</item>
        <item name="android:paddingRight">@dimen/small_padding_right</item>
        <item name="android:paddingStart">@dimen/small_padding_left</item>
        <item name="android:paddingEnd">@dimen/small_padding_right</item>
    </style>

    <style name="toppings_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/small_padding_top</item>

    </style>

</resources>
